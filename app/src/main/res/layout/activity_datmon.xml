<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".DatmonActivity">
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="Thông tin đơn hàng"
        android:textStyle="bold"
        android:titleTextColor="#FFFFFF"
        android:background="#272670"></Toolbar>
    <RelativeLayout android:background="#FCFCFC">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  Giao hàng đến"
            android:textSize="20dp"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="   79 Nguyễn Tri Phương"
            android:textSize="25dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:layout_marginTop="30dp"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  + Thêm vào tòa nhà, tầng, số phòng."
            android:textColor="#CC66FF"
            android:textSize="20dp"
            android:layout_marginTop="90dp"></TextView>

        <TextView
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="35dp"
            android:text=" Chỉnh sửa"
            android:textColor="#CC66FF"
            android:textSize="20dp"></TextView>
    </RelativeLayout>

    <TextView
        android:background="#FFFFFF"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:text="  Dặn dò tài xế"
        android:textColor="#CC66FF"
        android:textSize="20dp"></TextView>
    <TableLayout>
        <TextView
            android:layout_marginTop="12dp"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text=" Số điện thoại"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="     0123456789"
            android:textColor="#000000"
            android:background="#FFFFFF"
            android:textSize="20dp"></TextView>
    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:text=" Món"
        android:textSize="25dp"></TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="401dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="#FFFFFF"
            android:text="1x   Canh chua cá lóc"
            android:textColor="#000000"
            android:textSize="25dp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="69dp"
            android:layout_marginLeft="300dp"
            android:text="55.000đ"
            android:textSize="20dp"></TextView>

    </RelativeLayout>
    <RelativeLayout android:background="#FFFFFF">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="#FFFFFF"
            android:text="2x   Cơm chiên Hải sản"
            android:textColor="#000000"
            android:textSize="25dp"></TextView>

        <TextView
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="5dp"
            android:text="90.000đ"
            android:textSize="20dp"></TextView>
    </RelativeLayout>
    <RelativeLayout android:background="#FFFFFF">
        <TextView
            android:background="#FFFFFF"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2x   Bánh canh cua"
            android:textColor="#000000"
            android:textSize="25dp"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="60.000đ"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="300dp"></TextView>
    </RelativeLayout>
    <RelativeLayout
        android:background="#FFFFFF"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="26dp"
            android:fontFamily="sans-serif"
            android:text=" Tạm tính"
            android:textSize="25dp"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="40dp"
            android:text="180.000đ"
            android:textSize="20sp"></TextView>

    </RelativeLayout>
    <RelativeLayout
        android:background="#FFFFFF">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phí vận chuyển: 1.5km"
            android:fontFamily="sans-serif"
            android:textSize="25dp"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="7dp"
            android:text="15.000đ"
            android:textSize="20dp"></TextView>
    </RelativeLayout>
    <LinearLayout android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Tiền mặt"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="25dp"
            android:text="ADD A PROMO"
            android:textAlignment="center"
            android:textColor="#6666FF	"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="195.000đ"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="195dp"
            android:layout_height="90dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="#272670"
            android:text="Đặt Hàng"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>
</TableLayout>